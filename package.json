{
	"name": "filament.zone",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest run",
		"test:watch": "vitest watch",
		"coverage": "vitest run --coverage",
		"lint": "prettier --check . && eslint . && markdownlint 'publications/*.md' '.github/**/*.md'",
		"format": "prettier --plugin prettier-plugin-svelte --write '**/*' --ignore-unknown",
		"cms-gen": "node --no-warnings=ExperimentalWarning --loader ts-node/esm src/scripts/cms-gen.ts",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.1.1",
		"@sveltejs/adapter-cloudflare": "^2.3.3",
		"@sveltejs/kit": "^1.27.6",
		"@types/markdown-it": "^13.0.5",
		"@types/markdown-it-footnote": "^3.0.3",
		"@typescript-eslint/eslint-plugin": "^6.12.0",
		"@typescript-eslint/parser": "^6.11.0",
		"@vitest/coverage-c8": "^0.33.0",
		"eslint": "^8.54.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"less": "^4.2.0",
		"markdown-toc": "^1.2.0",
		"markdownlint": "^0.31.1",
		"markdownlint-cli": "^0.37.0",
		"parse-md": "^3.0.3",
		"prettier": "3.1.0",
		"prettier-plugin-svelte": "^3.1.0",
		"svelte": "^3.59.2",
		"svelte-check": "^3.6.2",
		"svelte-preprocess": "^5.0.0",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.5.0",
		"vite-plugin-inspect": "^0.7.41",
		"vitest": "^0.34.6"
	},
	"type": "module",
	"dependencies": {
		"markdown-it": "^13.0.2",
		"markdown-it-anchor": "^8.6.7",
		"markdown-it-footnote": "^3.0.3",
		"moment": "^2.29.4"
	}
}

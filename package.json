{
	"name": "filament.zone",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest run",
		"test:watch": "vitest watch",
		"coverage": "vitest run --coverage",
		"lint": "prettier --check . && eslint . && markdownlint 'publications/*.md' '.github/**/*.md'",
		"format": "prettier --plugin prettier-plugin-svelte --write '**/*' --ignore-unknown",
		"cms-gen": "node --no-warnings=ExperimentalWarning --loader ts-node/esm src/scripts/cms-gen.ts",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.2.4",
		"@sveltejs/adapter-cloudflare": "^4.7.2",
		"@sveltejs/kit": "^2.5.25",
		"@types/markdown-it": "^14.1.1",
		"@types/markdown-it-footnote": "^3.0.4",
		"@typescript-eslint/eslint-plugin": "^7.12.0",
		"@typescript-eslint/parser": "^7.17.0",
		"@vitest/coverage-v8": "^2.0.5",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.43.0",
		"husky": "^9.1.4",
		"less": "^4.2.0",
		"markdown-toc": "^1.2.0",
		"markdownlint": "^0.35.0",
		"markdownlint-cli": "^0.41.0",
		"parse-md": "^3.0.3",
		"prettier": "3.3.3",
		"prettier-plugin-svelte": "^3.2.5",
		"svelte": "^4.2.19",
		"svelte-check": "^4.0.1",
		"svelte-eslint-parser": "^0.41.0",
		"svelte-preprocess": "^6.0.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tslib": "^2.7.0",
		"typescript": "^5.5.3",
		"vite": "^5.4.3",
		"vitest": "^2.0.5"
	},
	"type": "module",
	"dependencies": {
		"markdown-it": "^14.1.0",
		"markdown-it-anchor": "^9.2.0",
		"markdown-it-footnote": "^4.0.0",
		"moment": "^2.30.1"
	}
}
